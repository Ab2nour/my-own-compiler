<?xml version="1.0" encoding="UTF-8"?>

<tests>
    <titre>Floats</titre>
        
    <test>
        <entree>
            printf(42.42)
        </entree>
        <sortie>
            42.420
        </sortie>
    </test>

    <test>
        <entree>
            printf(0.1 + 0.2)
        </entree>
        <sortie>
            0.300
        </sortie>
    </test>

    <test>
        <entree>
            printf(1e3)
        </entree>
        <sortie>
            1000.000
        </sortie>
    </test>

    <test>
        <entree>
            printf(1e3 * 5.0)
        </entree>
        <sortie>
            5000.000
        </sortie>
    </test>

    <test>
        <entree>
            printf(4.2e1)
        </entree>
        <sortie>
            42.000
        </sortie>
    </test>

    <test>
        <entree>
            printf(-(-4.2e1))
        </entree>
        <sortie>
            42.000
        </sortie>
    </test>

    <test>
        <entree>
            printf(1e-3)
        </entree>
        <sortie>
            0.001
        </sortie>
    </test>
</tests>
